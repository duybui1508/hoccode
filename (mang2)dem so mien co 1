#include <bits/stdc++.h>
using namespace std;
#define ll long long
int a[505][505];
int n,m;
int dx[4]= {-1,0,0,1}
int dy[4]= { 0,1,-1,0}
void dfs(int a, int b){
   a[i][j]=0;
   for(int k=0; k<4; k++){
      int i1=i+dx[k];
      int j1=j+dy[k];
      if(i1>=0 && i1<n && j1>= 0 && j1<m && a[i1][j1]==1){
         dfs(i1,j1);
      }
   }
}
int main(){
   int n,m;
   cin >> n >> m ;
   int a[50][50];
   for(int i=0; i<n; i++){
      for(int j=0; j<n; j++){
         cin >> a[i][j];
      }
}
   int dem=0;
   for(int i=0; i<n; i++){
      for(int j=0; j<n; j++){
         if(a[i][j]==1) {
         dem++;
         dfs(i,j);
         }
      }
   }
   cout << dem << endl;
}
