#include <bits/stdc++.h>
using namespace std;
#define ll long long
int main(){
   int n,m;
   cin >> n >> m ;
   int a[50][50];
   int mn=INT_MAX,mx =INT_MIN;
   for(int i=0; i<n; i++){
      for(int j=0; j<m; j++){
         cin >> a[i][j];
         mn = min(mn, a[i][j]);
         mx = max(mx, a[i][j]);
      }
   }
    cout << mn << endl;
   for(int i=0; i<n; i++){
      for(int j=0; j<m; j++){
         if(a[i][j]==mn){
            cout << i+1 << " " << j+1 << endl;
         }
      }
      cout << endl;
   }
   cout <<mx << endl;
   for(int i=0; i<n; i++){
      for(int j=0; j<m; j++){
         if(a[i][j]==mx){
            cout << i+1 << " " << j+1 << endl;
         }
      }
      cout << endl;
   }
}
